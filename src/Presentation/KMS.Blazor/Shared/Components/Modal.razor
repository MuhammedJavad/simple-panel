<div class="modal fade @(_show ? "show d-block" : string.Empty)" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        @ChildContent
    </div>
</div>

@if (_show)
{
    <div class="modal-backdrop fade show"></div>
}

@code {

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    private bool _show = true;

    public void Open()
    {
        _show = true;
        StateHasChanged();
    }

    public void Close()
    {
        _show = false;
        StateHasChanged();
    }

}